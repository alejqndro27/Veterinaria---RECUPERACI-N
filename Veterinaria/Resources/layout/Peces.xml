<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="40dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <TextView
      android:hint="ADMINISTRAR PECES"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:id="@+id/textView1" />

    <EditText
        android:hint="ID(NO INGRESAR)"
        android:inputType="number"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40.5dp"
        android:layout_marginTop="25dip"
        android:id="@+id/txtIdPes"
        android:layout_marginBottom="0.0dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNombrePes"
        android:hint="Nombre de la mascota"
        android:gravity="center"/>

    <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/txtCedulaDueño"
       android:hint="Cédula del dueño"
       android:gravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEdadPes"
        android:hint="Edad de la mascota"
        android:gravity="center"/>

     <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtEspeciePes"
      android:hint="Especie del pez"
      android:gravity="center"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtRazaPes"
      android:hint="Raza del pez"
      android:gravity="center"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtCaracteristicasPes"
      android:hint="Características del pez"
      android:gravity="center" />

     <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtPesoPes"
      android:hint="Peso"
      android:gravity="center" />

    <Button
       android:text="Registrar mascota"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@android:color/holo_red_light"
       android:textColor="@android:color/white"
       android:id="@+id/btnRegistrar" />

    <Button
       android:text="Consultar mascota"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@android:color/holo_red_light"
       android:textColor="@android:color/white"
       android:id="@+id/btnConsultarPes" />
    <Button
       android:text="Volver al inicio"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@android:color/holo_red_light"
       android:textColor="@android:color/white"
       android:id="@+id/btnIrInicio" />
   

</LinearLayout>

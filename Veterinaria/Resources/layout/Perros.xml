<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="40dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <TextView
      android:text="ADMINISTRAR MASCOTAS"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:id="@+id/textView1" />

       <EditText
        android:hint="ID(campo identity no ingresar)"
        android:inputType="number"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="25dip"
        android:id="@+id/txtIdMascota"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNombreMascota"
        android:hint="Nombre de la mascota"
        android:gravity="center"/>

    <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/txtCedulaDueñoMascota"
       android:hint="Cédula del dueño"
       android:gravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEdadMascota"
        android:hint="Edad de la mascota"
        android:gravity="center"/>

     <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtEspecieMascota"
      android:hint="Esécie del perro"
      android:gravity="center"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtRazaMascota"
      android:hint="Raza del perro"
      android:gravity="center"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtCaracteristicasMascota"
      android:hint="Características del perro"
      android:gravity="center" />

     <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtPesoMascota"
      android:hint="Peso"
      android:gravity="center" />

    <Button
       android:hint="Registrar Perro"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@android:color/holo_red_light"
       android:textColor="@android:color/white"
       android:id="@+id/btnRegistrar" />

    <Button
       android:hint="Consultar Perro"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@android:color/holo_red_light"
       android:textColor="@android:color/white"
       android:id="@+id/btnConsultar" />
    

</LinearLayout>
